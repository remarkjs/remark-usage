{
  "name": "remark-usage",
  "version": "8.0.0",
  "description": "remark plugin to add a usage example to your readme",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "plain",
    "text"
  ],
  "repository": "remarkjs/remark-usage",
  "bugs": "https://github.com/remarkjs/remark-usage/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Ben Briggs <beneb.info@gmail.com>",
    "Nick Baugh <niftylettuce@gmail.com>"
  ],
  "files": [
    "lib/",
    "index.js"
  ],
  "dependencies": {
    "@babel/core": "^7.0.0",
    "mdast-util-heading-range": "^2.0.0",
    "nanoid": "^3.0.0",
    "remark-parse": "^8.0.0",
    "resolve-from": "^5.0.0",
    "trough": "^1.0.0",
    "unified": "^9.0.0"
  },
  "devDependencies": {
    "is-hidden": "^1.0.0",
    "negate": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^12.0.0",
    "remark-cli": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "tape": "^5.0.0",
    "to-vfile": "^6.0.0",
    "xo": "^0.32.0"
  },
  "scripts": {
    "format:md": "remark . -qfo",
    "#": "xo currently crashes on invalid `package.json`s in fixtures: && xo --fix",
    "format:js": "prettier . --no-config --config ./package.json --write",
    "format": "npm run format:md && npm run format:js",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-optional-catch-binding": "off",
      "unicorn/string-content": "off"
    },
    "ignore": [
      "example.js",
      "test/fixtures"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "remark-lint-fenced-code-flag",
        false
      ],
      [
        "./",
        {
          "heading": "use"
        }
      ]
    ]
  }
}
