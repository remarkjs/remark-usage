{
  "name": "remark-usage",
  "version": "4.0.1",
  "description": "Add a usage example to your README",
  "license": "MIT",
  "keywords": [
    "text",
    "markdown",
    "plain",
    "text"
  ],
  "repository": "https://github.com/wooorm/remark-usage",
  "bugs": "https://github.com/wooorm/remark-usage/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "cept": "^1.0.0",
    "mdast-util-heading-range": "^2.0.0",
    "require-uncached": "^1.0.2",
    "trim-trailing-lines": "^1.0.0",
    "unquote": "^1.1.0"
  },
  "devDependencies": {
    "is-hidden": "^1.0.1",
    "negate": "^1.0.0",
    "nyc": "^10.0.0",
    "remark": "^7.0.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark *.md --quiet --frail",
    "build": "npm run build-md",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "rules": {
      "max-lines": "off",
      "no-cond-assign": "off",
      "import/no-dynamic-require": "off"
    },
    "ignore": [
      "example.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm",
    "plugins": {
      "./": null,
      "lint": {
        "fenced-code-flag": false
      }
    }
  }
}
